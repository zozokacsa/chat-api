{
    "openapi": "3.0.3",
    "info": {
        "title": "Chat API",
        "version": "1.0.0"
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/email/verify/{id}/{hash}": {
            "get": {
                "summary": "Verify email address",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    },
                    {
                        "name": "hash",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Email verified successfully" },
                    "400": { "description": "Invalid verification link" }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "summary": "Login with email and password",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["email", "password"],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": { "description": "Successful login" },
                    "401": { "description": "Invalid credentials" }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "summary": "Register a new user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": { "type": "string" },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": { "description": "User registered successfully" },
                    "400": { "description": "Validation error" }
                }
            }
        },
        "/api/auth/me": {
            "get": {
                "summary": "Get current authenticated user",
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": { "description": "Current user returned" },
                    "401": { "description": "Unauthenticated" }
                }
            }
        },
        "/api/friends": {
            "get": {
                "summary": "List all friends",
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": { "description": "Friends list" }
                }
            }
        },
        "/api/friends/{id}": {
            "delete": {
                "summary": "Remove a friend",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": { "description": "Friend removed" },
                    "404": { "description": "Friend not found" }
                }
            }
        },
        "/api/friends/requests": {
            "post": {
                "summary": "Send a friend request",
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["user_id"],
                                "properties": {
                                    "user_id": { "type": "integer" }
                                }
                            }
                        }
                    }
                },
                "responses": { "201": { "description": "Friend request sent" } }
            }
        },
        "/api/friends/requests/received": {
            "get": {
                "summary": "Get received friend requests",
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": { "description": "List of received requests" }
                }
            }
        },
        "/api/friends/requests/sent": {
            "get": {
                "summary": "Get sent friend requests",
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": { "description": "List of sent requests" }
                }
            }
        },
        "/api/friends/requests/{id}/accept": {
            "post": {
                "summary": "Accept a friend request",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": { "description": "Friend request accepted" }
                }
            }
        },
        "/api/friends/requests/{id}/reject": {
            "post": {
                "summary": "Reject a friend request",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": { "description": "Friend request rejected" }
                }
            }
        },
        "/api/users": {
            "get": {
                "summary": "List active users",
                "security": [{ "bearerAuth": [] }],
                "responses": { "200": { "description": "Active users list" } }
            }
        },
        "/api/messages": {
            "post": {
                "summary": "Send a message",
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["receiver_id", "message"],
                                "properties": {
                                    "receiver_id": { "type": "integer" },
                                    "message": { "type": "string" }
                                }
                            }
                        }
                    }
                },
                "responses": { "201": { "description": "Message sent" } }
            }
        },
        "/api/messages/{friend_id}": {
            "get": {
                "summary": "Get conversation with a friend",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "friend_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": { "description": "Conversation retrieved" }
                }
            }
        }
    }
}
